@model IMS_WebApplication.Models.Client

@{
    ViewData["Title"] = "Client Details";
    Layout = "_MyLayout";
}

<style>
    table {
        width: 100%;
        max-width: 600px; /* Adjust as needed */
        margin: 0 auto;
        border-collapse: collapse; /* Collapse table borders */
    }

    th, td {
        padding: 10px;
        border: 1px solid #ddd; /* Add border for cells */
    }

    th {
        width: 30%; /* Adjust as needed */
        background-color: #1DCED8; /* Light gray background for header */
    }

    td {
        width: 70%; /* Adjust as needed */
    }

    .btn {
        margin-top: 20px; /* Adjust as needed */
    }

    .text-center {
        text-align: center; /* Center-align text */
    }

    .table-bordered th,
    .table-bordered td {
        border: 1px solid #ddd; /* Add border to cells */
    }

    .table-bordered {
        border: 1px solid #ddd; /* Add border to table */
    }
</style>


<h2 class="text-center" style="color: #FA67AB;">Client Details</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <table class="table table-bordered" >
                <tbody>
                    @if (Model != null)
                    {
                        <tr>
                            <th>Client ID</th>
                            <td>@Model.ClientId</td>
                        </tr>
                        <tr>
                            <th>First Name</th>
                            <td>@Model.FirstName</td>
                        </tr>
                        <tr>
                            <th>Last Name</th>
                            <td>@Model.LastName</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>@Model.City</td>
                        </tr>
                        <tr>
                            <th>State</th>
                            <td>@Model.State</td>
                        </tr>
                        <tr>
                            <th>PAN Card No</th>
                            <td>@Model.PanCardNo</td>
                        </tr>
                        <tr>
                            <th>Gender</th>
                            <td>@Model.Gender</td>
                        </tr>
                        <tr>
                            <th>Age</th>
                            <td>@Model.Age</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center">Client details not found.</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-action="Details" class="btn btn-primary">Back to Enter Client ID</a>
        </div>
    </div>
</div>
