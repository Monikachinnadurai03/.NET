@model IMS_WebApplication.Models.Client

@{
    ViewData["Title"] = "Delete";
    Layout = "_MyLayout";
}

<h1>Delete Client</h1>

<h3>Are you sure you want to delete this client?</h3>

<!-- Display response message if available -->
@if (!string.IsNullOrEmpty(TempData["ResponseClass"] as string) && !string.IsNullOrEmpty(TempData["Response"] as string))
{
    <div class="alert alert-@(TempData["ResponseClass"])" role="alert">
        @(TempData["Response"])
    </div>
}
@if (Model != null)
{
    // Render client details in a table format
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Client ID</th>
                <td>@Model.ClientId</td>
            </tr>
            <tr>
                <th>First Name</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.LastName</td>
            </tr>
            <!-- Add other client details as needed -->

            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>City</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>State</th>
                <td>@Model.State</td>
            </tr>
            <tr>
                <th>PAN Card No</th>
                <td>@Model.PanCardNo</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>@Model.Gender</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>@Model.Age</td>
            </tr>
        </tbody>
    </table>

   

    <!-- Form to confirm deletion -->
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.ClientId" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="ClientList" class="btn btn-secondary">Cancel</a>
    </form>
}