@model List<IMS_WebApplication.Models.Client>

@{
    ViewData["Title"] = "Client List";
    Layout = "_MyLayout";
}

<h2 class=" text-center"style="color:#FA67AB;">Client List</h2>

@if (!string.IsNullOrEmpty(ViewData["Response"] as string))
{
    <div class="alert alert-@(ViewData["ResponseClass"])" role="alert">
        @(ViewData["Response"])
    </div>
}
@if (Model != null && Model.Count > 0)
{
    <table class="table table-bordered">
        <thead style="background-color: #1DCED8; color: #333;">
            <tr>
                <th>Client ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>City</th>
                <th>State</th>
                <th>PAN card No</th>
                <th>Gender</th>
                <th>Age</th>
                <th>Updation</th>
                <th>Deletion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Model)
            {
                <tr>
                    <td>@client.ClientId</td>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.Email</td>
                    <td>@client.PhoneNumber</td>
                    <td>@client.City</td>
                    <td>@client.State</td>
                    <td>@client.PanCardNo</td>
                    <td>@client.Gender</td>
                    <td>@client.Age</td>
                    <td><a asp-action="Edit" asp-route-id="@client.ClientId" class="btn btn-primary">Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@client.ClientId" class="btn btn-primary">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No clients available.</p>
}

