@model IEnumerable<IMS_WebApplication.Models.Client>

@{
    ViewData["Title"] = "Clients";
    Layout = "_MyLayout";
}

<div class="container col-md-6" style="margin-bottom: 20px;">
<h2  class="text-center" style="color: #FA67AB;">ClientAgeGenderAnalysis</h2> 
 <form asp-action="ClientsByAgeAndGender" method="post"> 
     <div class="form-group">
        <label for="age">Age:</label>
        <input type="number" class="form-control" id="age" name="age" required>
    </div>
    <div class="form-group">
        <label for="gender">Gender:</label>
        <select class="form-control" id="gender" name="gender" required>
            <option value="Select">Select</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary"> Apply </button> 
 </form>

 @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <p class="text-danger">@ViewBag.ErrorMessage</p>
}
</div>
@if (Model != null && Model.Any())
{
    @* <h2>Filtered Clients</h2> *@
        <table class="table table-bordered">
        <thead style="background-color: #1DCED8; color: #333;">
                <tr>
                    <th>Client ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>PAN CARD No</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <!-- Add other columns if needed -->
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.ClientId</td>
                        <td>@client.FirstName</td>
                        <td>@client.LastName</td>
                        <td>@client.Email</td>
                        <td>@client.PanCardNo</td>
                        <td>@client.City</td>
                        <td>@client.State</td>
                        <td>@client.Age</td>
                        <td>@client.Gender</td>
                        <!-- Add other columns if needed -->
                    </tr>
                }
            </tbody>
        </table>
}



